<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/background_holo_dark">
	<Button android:id="@+id/StopMotor1" android:text="停止"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp" />
	<Button android:id="@+id/ForwardMotor1" android:text="前進"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp" />
	<Button android:id="@+id/BackwardMotor1" android:text="後退"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp" />
	<Button android:id="@+id/Servo1" android:text="Servo1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp" />
	<Button android:id="@+id/Servo2" android:text="Servo2"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp" />
	<Button android:id="@+id/Servo3" android:text="Servo3"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp" />

</LinearLayout>
